{{log model}}
{{#if model.canEdit}}
    <form class="new_event_form">
        <div class="input_row">
		    <label for="event-title">Event Name: </label>
            <input type="text" name="event-title" value={{model.event-title}}>
        </div>
        <div class="input_row">
            <label for="event-city">Location: </label>
            <input type="text" name="event-city" value={{model.event-city}}>
        </div>
        <div class="input_row">
            <label for="event-image">Event Image (URL): </label>
            <input type="url" name="event-image" value={{model.event-image}}>
        </div>
        <div class="input_row">
            <label for="event-bedrooms">Estimated Attendance: </label>
            <input type="number" name="event-bedrooms" value={{model.event-bedrooms}}>
        </div>
        <div class="input_row">
            <label for="event-description">Description of the event: </label>
            <textarea name="event-description" value={{model.event-description}}></textarea>
        </div>
        <input type="hidden" name="event-id" value={{model.event-id}}>
        <input type="hidden" name="event-owner" value={{model.event-owner}}>
        <input class="btn btn-default login_button" type="submit" {{action 'updateEvent'}} value="Save Event">
    </form>
{{else}}
    <div class="error_message">
        <p>You don't have the permission to edit an event.</p>
        <p><a href="/">Return to the home page.</a></p>
    </div>
{{/if}}