<div class="jumbo">
  <h2>Whats On</h2>
</div>

<div class="container">
  <div class="row">
    {{#each this.model.data as |event|}}
    <div class="col-md-4 col-sm-6 mb-4">
      <div class="card h-100">
        <img src={{event.image}} class="card-img-top" alt="...">
        <div class="card-body d-flex flex-column">
          <h5 class="card-title">{{event.title}}</h5>
          <p class="card-text">{{event.description}}</p>
          <div>
            <a href="#" {{action "goToEventProfile"}} class="btn btn-primary btn-custom mt-auto">View Event</a>
            {{#if model.canEdit}}
            <a href="#" {{action "editEvent" event.id}} class="btn btn-primary btn-custom mt-auto">Edit Event</a>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  <div class="pull-left">
    {{#if model.canEdit}}
    <button class="btn btn-primary" {{action "addEvent"}}>Add Event</button>
    {{/if}}
  </div>
</div>