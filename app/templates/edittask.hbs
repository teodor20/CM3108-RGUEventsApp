{{#if model.canEdit}}
    <div class="input_row">
		    <label for="task-name">Task Name: </label>
            <input type="text" name="task-name" value={{model.task_name}}>
        </div>
    <input type="hidden" name="event-id" value={{model.task_event_id}}>
    <input type="hidden" name="task-id" value={{model.task_id}}>
    <div class="input_row">
        <label for="task-owner">Assignee: </label>
        <input type="text" name="task-owner" value={{model.task_owner}}>
    </div>
    <div class="input_row">
        <label for="task-status">Status of the Task: </label>
        <input type="text" name="task-status" value={{model.task_status}}>
    </div>
    <input class="btn btn-default login_button" type="submit" {{action 'updateTask'}} value="Save Event">
{{else}}
    <div class="error_message">
        <p>You don't have the permission to edit a task.</p>
        <p><a href="/">Return to the home page.</a></p>
    </div>
{{/if}}