{{models-table
  data=model.data
  columns=model.columns
  showGlobalFilter=false
  pageSize=10000
  showComponentFooter=false
  multipleSelect=false
  sendDisplayDataChangedAction=true
  displayDataChangedAction="onDocumentDataChanged"}}

<div class="pull-left">
  {{#if model.canEdit}}
    <button class="btn btn-primary" {{action "addUser"}}>Add User</button>
    <button class="btn btn-primary" disabled={{if model.selectedItem false true}} {{action "editUser"}}>Edit User</button>
  {{else}}
    <button class="btn btn-primary" disabled={{if model.selectedItem false true}} {{action "viewUser"}}>View User</button>
  {{/if}}
</div>
